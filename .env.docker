# Environment variables for use with Docker Compose

# Data Source URL (example: Wikipedia page with tables)
DATA_URL=https://en.wikipedia.org/wiki/List_of_countries_by_population_(United_Nations)

# Kafka Configuration (using Docker Compose services)
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=html-table-data
KAFKA_CLIENT_ID=html-table-scraper
KAFKA_GROUP_ID=table-consumer-group

# Database Configuration (using Docker Compose MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=rootpassword
DB_NAME=table_data

# Table Configuration
DB_TABLE_NAME=extracted_data

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=1000
REQUEST_TIMEOUT_MS=10000

# Batch Size for Database Inserts
BATCH_SIZE=100
